<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ToggleButton="http://schemas.android.com/apk/res/com.luzhuo.viewdemo"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <com.luzhuo.viewdemo.ToggleButton
        android:id="@+id/toggle_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        ToggleButton:toggleBackground="@drawable/togglebutton_switchbackground"
        ToggleButton:slideButton="@drawable/togglebutton_slide"
        ToggleButton:state="true" />

</RelativeLayout>